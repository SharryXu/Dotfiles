#!/usr/bin/env bash

# Check given folder is a git repository or not.
# Globals:
#   git
#   print
# Arguments:
#   Tool Name
#   Command Line Name (Optional)
# Returns:
#   IsAlive

function usage() {
  echo -e "usage: $(basename "$0") folder_path"

  exit 1
}

if [ $# -eq 1 ]; then
  folder=$(realpath "$1")

  if [ ! -d "$folder" ]; then
    exit 1
  fi

  (
  cd "$folder" || exit 1

  if git rev-parse --git-dir 2>/dev/null 1>&2; then
    exit 0
  else
    exit 1
  fi
  )
else
  usage
fi
