#!/bin/bash

# Check whether specific folder is empty or not.
# Globals:
#   find
#   print
# Arguments:
#   Folder Path
# Returns:
#   Folder Status

function usage() {
  echo -e "usage: $(basename $0) folder_path"
  exit 1
}

if [ $# -eq 1 ]; then
  folderPath=$(realpath $1)
  result=$(find $folderPath -name '*' -maxdepth 1)
  if [[ $result == $folderPath ]]; then
    echo 0
  else
    echo 1
  fi

  exit 0
else
  usage
fi
