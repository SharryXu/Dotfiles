#!/bin/bash

# Let user to answer yes-or-no question
# results to stderr
# Globals:
#   Print
# Arguments:
#   Prompt message
# Returns:
#   customer result

declare -r manual="Usage: choice_yes_no"

if [ $# -eq 1 ]; then
  retry_count=0
  while [[ retry_count -lt max_retry_count ]]; do
    if [[ retry_count -eq 0 ]]; then
      read -p "$1" yn
    else
      read -p "Please answer yes(y) or no(n):" yn
    fi

    case $yn in
      [Yy]* ) echo 0;;
      [Nn]* ) echo 1;;
      * ) print 2 "Please try again.";;
    esac

    let retry_count=retry_count+1
  done

  echo 1
  exit 0
else
  echo -e $manual
  exit 1
fi
