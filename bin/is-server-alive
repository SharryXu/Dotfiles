#!/bin/bash

# Check whether specific server is alive or not.
# Globals:
#   ping
#   print
# Arguments:
#   Tool Name
#   Command Line Name (Optional)
# Returns:
#   IsAlive

function usage() {
  echo -e "usage: $(basename $0) ip_address|server_address\n"
  exit 1
}

if [ $# -eq 1 ]; then
  tryCounts = 3
  result=$(ping $1 -c $tryCounts | grep "^\w\{2\} bytes from .*ttl=[0-9]" -c)
  if [ $result -eq $tryCounts ]; then
    echo 0
  else
    echo 1
  fi

  exit 0
else
  usage
fi
