#!/bin/bash

# Decide if the input string can be represented as a number.
# Globals:
# Arguments:
#   String
# Returns:
#   None

declare -r digital_pattern="^-?[0-9]+([.][0-9]+)?$"

function usage() {
  echo -e "usage: $(basename $0) [options] [input_string]\n
[options]:
-h  Show help information."
  exit 1
}

while getopts "h" option; do
  case $option in
    h)usage;;
  esac
done

if [[ $# -gt 1 && $1 =~ $digital_pattern ]]; then
  echo 0
else
  echo 1
fi

exit 0
