#!/bin/bash

# Print common results to stdout and error
# results to stderr
# Globals:
#   d_Green
#   d_Red
#   d_Yellow
#   d_Blue
#   d_NC
# Arguments:
#   Status Code (Normal=0, Success=1, Warning=2, Error=3)
#   Output sentence
# Returns:
#   None

source $HOME/.bin/default-colors

declare -r manual="Usage: print <status code> <message>\n\
\n\
status code:\n\
0: Normal\n\
1: Success\n\
2: Warning\n\
3: Error"

if [ $# -eq 2 ]
then
  if [ $1 -eq 0 ]
  then
    echo -e "${d_Blue}$2${d_NC}" >&1
	elif [ $1 -eq 1 ]
  then
    echo -e "${d_Green}$2${d_NC}" >&1
  elif [ $1 -eq 2 ]
  then
    echo -e "${d_Yellow}$2${d_NC}" >&1 >&2
  elif [ $1 -eq 3 ]
  then
    echo -e "${d_Red}$2${d_NC}" >&1
  else
    echo -e "${d_Red}Status code should only among 0, 1, 2 and 3.${d_NC}" >&1 >&2
  fi

  exit 0
else
  echo -e $manual >&1 >&2
  exit 1
fi
