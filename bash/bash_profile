#!/bin/bash

function load-python() {
  if which pyenv 1>/dev/null 2>&1; then
    eval "$(pyenv init -)"
    eval "$(pyenv virtualenv-init -)"
  fi
}

function load-nvm() {
  [ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
  [ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion
  nvm use default 1>/dev/null 2>&1
}

function load-travis() {
  [ -f "$HOME"/.travis/travis.sh ] && source "$HOME"/.travis/travis.sh
}

function load-fzf() {
  [ -f ~/.fzf.bash ] && source "$HOME"/.fzf.bash
}

load-python
load-nvm

alias emacs-term='emacs -nw'
alias vim='emacsclient'
start-or-restart-emacs

export GOPATH=$HOME/Go
export GOROOT=/usr/local/opt/go/libexec
export NVM_DIR="$HOME"/.nvm
export LLVM_PATH=/usr/local/opt/llvm/bin
export PYTHON_CONFIGURE_OPTS="--enable-framework"
export CUSTOM_BIN="$HOME"/.bin
export PACKAGE_BIN=/usr/local/bin
export PACKAGE_SBIN=/usr/local/sbin
export PYENV_ROOT="$HOME/.pyenv"
export PYENV_BIN="$PYENV_ROOT/bin"

export DOTFILES_PATH="$HOME"/Desktop/Projects/dotfiles

export PATH=$CUSTOM_BIN:$PYENV_BIN:$PACKAGE_BIN:$PACKAGE_SBIN:$LLVM_PATH:$NVM_DIR:$GOPATH/bin:$GOROOT/bin:$PATH
